<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:padding="5dp"
        android:background="@drawable/button_rounded_primary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="@drawable/button_rounded_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tvNama"
                    android:text="Nama User"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Pinjaman"
                            android:layout_weight="1"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" : "
                            android:layout_weight="1.8"
                            />
                        <TextView
                            android:id="@+id/tvJumlahPinjaman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Pinjaman"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Pinjaman"
                            android:layout_weight="1"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" : "
                            android:layout_weight="1.8"
                            />
                        <TextView
                            android:id="@+id/tvTanggalPinjam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Pinjaman"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Bayar"
                            android:layout_weight="1"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" : "
                            android:layout_weight="1.8"
                            />
                        <TextView
                            android:id="@+id/tvTanggalBayar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Pinjaman"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Komisi"
                            android:layout_weight="1"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" : "
                            android:layout_weight="1.8"
                            />
                        <TextView
                            android:id="@+id/tvKomisi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Komisi"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Pinjaman"
                            android:layout_weight="1"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" : "
                            android:layout_weight="1.8"
                            />
                        <TextView
                            android:id="@+id/tvTotalPinjaman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Pinjaman"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Terima"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:id="@+id/btnTerima"
                            android:background="@drawable/button_rounded_primary"
                            android:textColor="@color/colorWhite"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Tolak"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:id="@+id/btnTolak"
                            android:background="@drawable/button_rounded_red"
                            android:textColor="@color/colorWhite"/>
                    </LinearLayout>
                </RelativeLayout>




            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>